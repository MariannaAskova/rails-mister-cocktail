<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @cocktail.name %>
  </p>



  <h4>Doses</h4>
  <ul>
    <% @doses.each do |dose|  %>
      <li><%= dose.description %>  <%= dose.ingredient.name %></li>
      <%= link_to "Delete #{dose.description}",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    <% end %>
  </ul>


  <%= link_to 'Back', cocktails_path %>  |
  <%= link_to 'Add an Ingredient', new_cocktail_dose_path(@cocktail) %>  |
</div>

